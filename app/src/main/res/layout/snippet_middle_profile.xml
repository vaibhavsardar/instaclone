<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:padding="5dp">

    <TextView
        android:id="@+id/id_tvPostcount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="93"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/id_tvFollowercount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3031"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/id_tvPostcount"
        app:layout_constraintEnd_toStartOf="@+id/id_tvFollowingcount"
        app:layout_constraintStart_toEndOf="@+id/id_tvPostcount" />

    <TextView
        android:id="@+id/id_tvFollowingcount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:text="97"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Posts"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="@+id/id_tvPostcount"
        app:layout_constraintStart_toStartOf="@+id/id_tvPostcount"
        app:layout_constraintTop_toBottomOf="@+id/id_tvPostcount" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Followers"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView6"
        app:layout_constraintEnd_toEndOf="@+id/id_tvFollowercount"
        app:layout_constraintStart_toStartOf="@+id/id_tvFollowercount" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Following"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="@+id/id_tvFollowingcount"
        app:layout_constraintStart_toStartOf="@+id/id_tvFollowingcount"
        app:layout_constraintTop_toBottomOf="@+id/id_tvFollowingcount" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/gray_border"
        android:onClick="editProfile"
        android:text="Edit Your Profile"
        android:textColor="@color/black"
        android:gravity="center"
        android:fontFamily="sans-serif-medium"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />
</androidx.constraintlayout.widget.ConstraintLayout>